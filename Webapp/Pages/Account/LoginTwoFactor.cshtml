@page
@model Webapp.Pages.Account.LoginTwoFactorModel
@{
}
<p>
    <h3>please enter the code from your email.</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="TwoFactorLogin.MFAToken"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="TwoFactorLogin.MFAToken" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="TwoFactorLogin.MFAToken"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Verify" />
            </div>
            <div class="col">
                <input type="hidden" asp-for="TwoFactorLogin.RememberMe"/>
            </div>
        </div>
    </form>
</div>